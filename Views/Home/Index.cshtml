@{
    ViewData["Title"] = "Home Page";
}
@model IQueryable<Project>
<header class="text-center">
    <h1>Book Suggestions</h1>
    <link href="~/css/Styles.css" rel="stylesheet" />
</header>
<div>
    <div class="text-center">
        <img src="~/book2.png" />
    </div>
    
    <h2>Here is a list of Professor Hilton's Favorite Books</h2>
    <br />
    <!--Table that holds the seed data-->
    <table id="books">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author First Name</th>
                <th>Middle Intial</th>
                <th>Last Name</th>
                <th>Publisher</th>
                <th>ISBN Number</th>
                <th>Classification</th>
                <th>Category</th>
                <th>Price</th>
            </tr>
        </thead>
        <!--Display data-->
        <tbody>
            @foreach (var x in Model)
            {
                <tr>
                    <td>@x.Title</td>
                    <td>@x.AuthorFirst</td>
                    <td>@x.MiddleInt</td>
                    <td>@x.AuthorLast</td>
                    <td>@x.Publisher</td>
                    <td>@x.ISBN</td>
                    <td>@x.Classification</td>
                    <td>@x.Category</td>
                    <td>$@x.Price</td>
                </tr>
            }
        </tbody>
    </table>
</div>


