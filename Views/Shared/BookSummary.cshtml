@model Project

<div>


    <br />
    <!--Table that holds the seed data-->
    
        <!--Display data-->
        <tbody>
           
                <tr>
                    <td>@Model.Title</td>
                    <td>@Model.AuthorFirst</td>
                    <td>@Model.MiddleInt</td>
                    <td>@Model.AuthorLast</td>
                    <td>@Model.Publisher</td>
                    <td>@Model.ISBN</td>
                    <td>@Model.Classification</td>
                    <td>@Model.Category</td>
                    <td>@Model.NumPages</td>
                    <td>@Model.Price</td>
                    <td>
                        <form id="@Model.BookId" asp-page="/Cart" method="post">
                            <input type="hidden" asp-for="BookId" />
                            <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
                            <span class="card-text p-1">
                                <button type="submit" class="btn-primary btn-sm pull-right" style="float:right">
                                    Add to Cart
                                </button>
                            </span>
                        </form>
                    </td>
                </tr>
          
        </tbody>
    

    

</div> 